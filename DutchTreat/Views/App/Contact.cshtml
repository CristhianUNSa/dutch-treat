@model ContactViewModel

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <label asp-for="Nombre">Tu nombre</label>
    <br />
    <input asp-for="Nombre" />
    <span asp-validation-for="Nombre"></span>
    <br />
    <label asp-for="Email">Email</label>
    <br />
    <input type="email" asp-for="Email" />
    <span asp-validation-for="Email"></span>
    <br />
    <label asp-for="Asunto">Asunto</label>
    <br />
    <input type="text" name="Asunto" asp-for="Asunto" />
    <span asp-validation-for="Asunto"></span>
    <br />
    <label asp-for="Mensaje">Mensaje</label>
    <br />
    <textarea rows="4" asp-for="Mensaje"></textarea>
    <span asp-validation-for="Mensaje"></span>
    <br />
    <input type="submit" value="Enviar mensaje" />
    <div>@ViewBag.UserMessage</div>
</form>